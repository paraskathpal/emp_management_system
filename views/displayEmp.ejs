<!DOCTYPE html>
<html>
<head>    
    <title>Display Employees</title>
    <!-- <link rel="stylesheet" type="text/css" href="/style.css"> -->
    <style>
        table {
    text-align: center;
    
    width: 90%;
   
  }  
  
  th, td {
  border-bottom: 1px solid black;
}
  
</style>
</head>
<body>
    <h1>Displaying All the Employees</h1>
    <br>
    <div>
        <a href="/logout"><button>Logout</button></a>
    </div>
    <br>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Update/Delete</th>
            </tr>
        </thead>
            <% result.forEach(function(row){ %>
            <tr>
               <td><%= row.name %></td>
               <td><%= row.age %></td>
               <td><%= row.department%></td>
               <td><%= row.designation%></td>
               <td><a href="/update/<%= row.emp_id %>"><button>Update</button></a>
                <a href="/delete/<%= row.emp_id %>"><button>Delete</button></a></td>
            </tr>
            <% }); %>
    </table>
    <br>
    <div>
        <a href="/addEmployee"><button>Add New Employee </button></a>
    </div>      
</body>
</html>